<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    tools:context=".UserPostActivty">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        tools:ignore="ExtraText">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_placeholder_image"
            android:scaleType="centerCrop" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:hint="Write Description">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:gravity="top"
                android:minLines="3" />
        </com.google.android.material.textfield.TextInputLayout>


        <Spinner
            android:id="@+id/categorySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:padding="8dp"
            android:background="@android:drawable/btn_dropdown"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter quantity (e.g. 5 plates)"
            android:inputType="text"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/pickupDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Pickup Date"
            android:focusable="false"
            android:clickable="true" />

        <EditText
            android:id="@+id/pickupTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Pickup Time"
            android:focusable="false"
            android:clickable="true" />




        <EditText
            android:id="@+id/manualLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Pickup Address"
            android:inputType="textPostalAddress"
            android:padding="12dp"
            android:layout_marginTop="8dp"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/whatsappNumber"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Enter WhatsApp Number"
                android:inputType="phone"/>

            <ImageView
                android:id="@+id/whatsappIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="whatsapp icon"
                android:padding="8dp"
                android:src="@drawable/ic_whatsapp" /> <!-- Put your WhatsApp icon in drawable -->






        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">


            <EditText
                android:id="@+id/phoneNumber"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Enter Phone Number"
                android:inputType="phone"/>

            <ImageView
                android:id="@+id/phoneIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="phone icon"
                android:padding="8dp"
                android:src="@drawable/phoneicon" /> <!-- Put a phone icon in drawable -->

        </LinearLayout>



        <EditText
            android:id="@+id/expiryDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Expiry Date"
            android:focusable="false"
            android:clickable="true"
            android:inputType="none" />


        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Post"
            android:paddingHorizontal="32dp"
            android:paddingVertical="12dp" />

    </LinearLayout>
</ScrollView>

